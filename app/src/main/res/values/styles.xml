<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorPrimaryDark">#2b742a</item>-->
        <!--<item name="colorPrimary">#2b742a</item>-->
    </style>

    <style name="AppTheme2" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#00A652</item>
        <item name="colorPrimary">#00A652</item>
    </style>

    <style name="AppTheme1" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
    </style>

    <style name="AppTheme3" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#003F76</item>
        <item name="colorPrimaryDark">#003F76</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="signupheadtext_style">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="signupheadtext_style1">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#63e937</item>
        <item name="android:textStyle">italic</item>

    </style>

    <style name="midtext">
        <item name="android:textColor">@color/text_color_light_dark</item>
        <item name="android:textSize">14sp</item>

    </style>

    <style name="toolbartext_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fcfbfb</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="textinputstyle">
        <item name="android:textColor">#fff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="navDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="textinputstyle_black">
        <item name="android:textColor">#0e0e0e</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ButtonBorderless" parent="Widget.AppCompat.Button.Borderless.Colored">

    </style>
</resources>
